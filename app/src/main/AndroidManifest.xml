<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.raulvalverde.com.coinmanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/bitcoin"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bitcoin"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddCoinActivity"
            android:label="@string/title_activity_add_coin"
            android:theme="@style/AppTheme.NoActionBar">
    </activity>
        <activity
            android:name=".Activities.ShowCoin"
            android:label="@string/title_activity_show_coin"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>